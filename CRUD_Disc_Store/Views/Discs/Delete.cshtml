@model CRUD_Disc_Store.Models.Discs

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <div class="titlePage form-text"><h1>Apagar Disco</h1></div>
</div>
<div class="back">
    <a asp-action="Index" title="Volta">
        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-arrow-left-circle-fill" fill="#fff" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5.5a.5.5 0 0 0 0-1H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5z" />
        </svg>
    </a>
</div>
<h3 style="text-align: center; color: white">Tem certeza que irá apagar esse disco?</h3>
<hr class="divisorBar" />

<div class="row detailsContent">
    <div class="col-lg-10">
        <dt class="col-sm-2">
            Título:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Artista:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            Gênero:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
    </div>
    <div class="col-lg-2 text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="DiscID" />
            <input type="submit" value="Delete" class="btn btn-danger btnDetails" />
        </form>
    </div>
</div>
